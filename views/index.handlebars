
<div class="row">
  <div class="column" id="available">
    <h3>These Burgers are Available Now!</h3>
    <br>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=0}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="column" id="devoured">
    <h3>These Burgers Have Been Devoured!</h3>
    <br>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=1}}
        {{/if}}
      {{/each}}
    </ul>  
  </div>
</div>
